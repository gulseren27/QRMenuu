@model QR_menu.Models.ViewModel.ClassModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}



<!-- food section -->

<section class="food_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>Menü</h2>
        </div>

        @foreach (var c in Model.Categories)
        {
            var categoryProducts = Model.Products.Where(p => p.CategoryID == c.CategoryID).ToList();

            if (categoryProducts.Any()) // Kategoriye ait ürün varsa göster
            {
                <h2 class="category-title">@c.CName</h2> <!-- Kategori başlığı -->

                <div class="row">
                    <!-- Ürünleri yan yana hizalamak için -->
                    @foreach (var p in categoryProducts)
                    {
                        <div class="col-md-4 col-sm-6 mb-4">
                            <!-- 3 sütun düzeni -->
                            <div class="box">
                                <div class="img-box">
                                    <img src="~/Images/@p.Image" alt="" class="img-fluid">
                                </div>
                                <div class="detail-box">
                                    <h5>@p.PName</h5>
                                    <p style="height:160px">@p.PDescription</p>
                                    <div class="options">
                                        <h6 style="background-color:#f4a460; border-radius:50px 50px; text-align:center; width:50px">@p.Price ₺</h6>
